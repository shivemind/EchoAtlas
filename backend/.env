# Environment mode (development or production)
NODE_ENV=development

# MongoDB connection string (local database)
MONGO_URI=mongodb://echoatlasUser:securepassword@localhost:27017/echoatlas?authSource=echoatlas

# Uncomment and configure the below line if using a cloud database like MongoDB Atlas
# MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/echoatlas?retryWrites=true&w=majority

# JWT secret key for authentication (use a strong random string)
JWT_SECRET=your_jwt_secret_here

# Port for the backend server
PORT=5136

# CORS origin for development (Frontend URL)
CORS_ORIGIN=http://localhost:3000

# Uncomment the below line if deploying in production (replace with your domain)
# CORS_ORIGIN=https://your-production-domain.com
